<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.MyFilter.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>GetCategory</servlet-name>
        <servlet-class>com.Api.GetCategory</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCategory</servlet-name>
        <url-pattern>/api/getCategory</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.Api.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/api/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.Api.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/api/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchUser</servlet-name>
        <servlet-class>com.Api.SearchUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchUser</servlet-name>
        <url-pattern>/api/searchUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateOrder</servlet-name>
        <servlet-class>com.Api.UpdateOrderStatus</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateOrder</servlet-name>
        <url-pattern>/api/updateOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddBookWithToken</servlet-name>
        <servlet-class>com.Api.AddBookWithToken</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBookWithToken</servlet-name>
        <url-pattern>/api/addBookWithToken</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetShopCarWithToken</servlet-name>
        <servlet-class>com.Api.GetShopCarWithToken</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetShopCarWithToken</servlet-name>
        <url-pattern>/api/getShopCarWithToken</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SubmitOrder</servlet-name>
        <servlet-class>com.Api.SubmitOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmitOrder</servlet-name>
        <url-pattern>/api/submitOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddBookToSql</servlet-name>
        <servlet-class>com.Api.AddBookToSql</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBookToSql</servlet-name>
        <url-pattern>/api/addBookToSql</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetUserOrders</servlet-name>
        <servlet-class>com.Api.GetUserOrders</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetUserOrders</servlet-name>
        <url-pattern>/api/getUserOrders</url-pattern>
    </servlet-mapping>
</web-app>